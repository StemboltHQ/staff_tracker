<%= form_for @presentation do |f| %>
  <%= render 'errors' %>

  <p>
    <%= f.label :topic %><br>
    <%= f.text_field :topic %>
  </p>

  <p>
    <%= f.label :description %><br>
    <%= f.text_field :description %>
  </p>

  <p>
    <%= f.label :duration %><br>
    <%= f.text_field :duration %> Minutes
  </p>

  <p>
    <%= f.label :event %><br>
    <%= f.collection_select(:event_id, Event.upcoming, :id, :name, prompt: true) %>
  </p>

  <p>
    <%= f.submit %>
  </p>

<% end %>
