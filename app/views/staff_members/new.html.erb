<%= form_for :staff_member, url: staff_members_path do |f| %>

  <% if @staff_member.errors.any? %>
  <div class="error__explanation">
    <h2>
      <%= pluralize(@staff_member.errors.count, "error") %>
      Prohibited staff member from being saved:
    </h2>
    <ul>
      <% @staff_member.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
  <% end %>

  <p>
    <%= f.label :first_name %><br>
    <%= f.text_field :first_name %>
  </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>

<%= link_to 'Back', staff_members_path %>
