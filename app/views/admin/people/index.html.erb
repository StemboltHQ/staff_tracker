<%= simple_form_for :people, url: batch_update_admin_people_path, method: :put do |f| %>
  <table>
    <tr>
      <th>Name</th>
      <th>Roles</th>
    </tr>
    <% @people.each do |person| %>
      <tr>
        <td><%= person.first_name %></td>
        <td>
          <%= f.simple_fields_for 'person[]', person do |ff| %>
            <%= ff.association :roles,
              collection: Role.all,
              as: :check_boxes,
              label: false %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </table>
  <%= f.button :submit, 'Save Changes' %>
<% end %>
